@model IEnumerable<tblDiemDanh>

@{
    if (Model.Count() == 0)
    {
        <h4 class="text-info text-center">Không có buổi điểm danh</h4>
    }
    else
    {
        foreach (var item in Model)
        {
            <!-- Collapsable Card Example -->
            <div class="card shadow mb-3">
                <!-- Card Header - Accordion -->
                <a href="#collapseCard-@item.MaBuoiDD.ToString()" class="d-block card-header collapsed" data-toggle="collapse"
                   role="button" aria-expanded="true" aria-controls="collapseCardExample">
                    <h6 class="mb-1 font-weight-bold text-primary">Buổi điểm danh</h6>
                    <h6 class="mb-1 font-weight-bold text-info">Thời gian: @item.tblBuoiDiemDanh.NgayDD    ==>    @item.tblBuoiDiemDanh.HanDD</h6>
                    <h6 class="m-0 font-weight-bold text-warning"><span class="badge badge-warning">Chưa điểm danh</span></h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse show" id="collapseCard-@item.MaBuoiDD.ToString()">
                    <div class="card-body text-center">
                        <h5><span class="text-success"> Click vào nút điểm danh để điểm danh</span></h5>
                        <button data-id="@item.MaSV" value="@item.MaBuoiDD" class="DiemDanh btn btn-outline-success" style="cursor: pointer">Điểm danh</button>
                    </div>
                </div>
            </div>
        }
    }
}
