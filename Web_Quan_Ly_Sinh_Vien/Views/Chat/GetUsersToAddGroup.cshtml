@model IEnumerable<tblUser>

<ul class="list-group">
    @{
        if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <li class="list-group-item list-group-item-action rounded-0 mb-2 shadow-sm border-0 d-flex border-left-info align-items-center justify-content-between">
                    <div class="custom-control custom-checkbox">
                        <input class="custom-control-input" id="@item.Id" type="checkbox" name="userId">
                        <label class="custom-control-label" for="@item.Id">
                            <p class="mb-0">@item.Ho @item.Ten </p> <span class="text-primary">@item.MaSV</span>
                        </label>
                    </div>
                    <label for="@item.Id"><img src="@Url.Content(item.Anh)" class="rounded-circle mr-1" alt="Vanessa Tucker" width="50" height="50"></label>
                </li>
            }

        }
        else
        {
        }
    }
</ul>

