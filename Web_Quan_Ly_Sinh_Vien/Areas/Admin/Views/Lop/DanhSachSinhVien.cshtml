    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="LoadLopHoc">
    @Html.Action("Details", "Lop", new { id = ViewBag.MaLop })
