            $("#NgaySinh").val('');
            $("#Email").val('');
            $("#CCCD").val('');
            $("#SDT").val('');
            $("#MatKhau").val('');
            $("#GhiChu").val('');
            $("#customFile").val('');
            $('.avatar').attr('src', "/Images/SinhVien/avatar_2x.png");
            $(".loadtext").html("Chọn file");
        };

        // Xóa sinh viên
        $('body').on('click', '.Xoa', function () {
            var MaSV = $(".Xoa").val();
            $.ajax({
                async: true,
                url: '@Url.Action("Delete", "SinhVien")',
                data: { id: MaSV },
                dataType: 'json',
                type: "POST",
                success: function (data) {
                    if (data.status == true) {
                        LoadAllSinhVien();
                        toastr.options.positionClass = "toast-bottom-right";
                        toastr.success("Xóa thành công");
                    }
